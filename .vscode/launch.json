    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run MAIN Script",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/run_MAIN.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/"
            }
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/"
            }
        }
    ]
}